{
  "name": "@mattrglobal/node-bbs-signatures",
  "version": "0.1.0",
  "description": "",
  "homepage": "https://github.com/mattrglobal/node-bbs-signatures",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "native"
  ],
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattrglobal/node-bbs-signatures.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "binary": {
    "module_name": "index",
    "host": "https://github.com/mattrglobal/node-bbs-signatures/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build=false || yarn build:neon",
    "test": "jest",
    "benchmark": "ts-node ./bench/index.ts",
    "build": "yarn build:neon && yarn build:ts",
    "build:ts": "tsc --pretty",
    "build:neon": "neon build --release",
    "package": "node-pre-gyp package",
    "clean": "rm -rf lib/ && rm -rf native/index.node && rm -rf native/target && neon clean",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\"  \"!**/lib/**\"",
    "lint": "eslint . --ext .ts --color --format=table",
    "lint:fix": "yarn lint --fix",
    "pre-pr": "yarn clean && yarn format && yarn lint:fix && yarn build && yarn test",
    "version:current": "node -pe \"require('./package.json').version\"",
    "version:current-unstable": "echo \"$(yarn run -s version:current)-unstable.$(git rev-parse --short HEAD)\"",
    "publish:unstable:binary": "yarn version --no-git-tag-version --patch && yarn version --no-git-tag-version --new-version \"$(yarn run -s version:current-unstable)\" && yarn package && node-pre-gyp-github publish --release && git checkout -- package.json",
    "publish:unstable:ts": "rm native/index.node && yarn version --no-git-tag-version --patch && yarn publish --no-git-tag-version --new-version \"$(yarn run -s version:current-unstable)\" && git checkout -- package.json",
    "publish:unstable": "yarn version --no-git-tag-version --patch && yarn publish --no-git-tag-version --new-version \"$(yarn run -s version:current-unstable)\" && yarn package && node-pre-gyp-github publish --release && git checkout -- package.json"
  },
  "devDependencies": {
    "@stablelib/base64": "1.0.0",
    "@stablelib/benchmark": "1.0.0",
    "@stablelib/random": "1.0.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "24.9.0",
    "node-pre-gyp-github": "1.4.3",
    "prettier": "2.0.4",
    "ts-jest": "24.0.2",
    "ts-node": "8.4.1",
    "typescript": "3.7.5"
  },
  "dependencies": {
    "neon-cli": "0.4.0",
    "node-pre-gyp": "amilajack/node-pre-gyp#neon-compat"
  }
}
