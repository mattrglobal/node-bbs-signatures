{
  "name": "@mattrglobal/node-bbs-signatures",
  "version": "0.1.0",
  "description": "",
  "homepage": "https://github.com/mattrglobal/node-bbs-signatures",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattrglobal/node-bbs-signatures.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "test": "jest",
    "benchmark": "ts-node ./bench/index.ts",
    "build": "yarn build:neon && yarn build:ts",
    "build:ts": "tsc --pretty",
    "build:neon": "neon build --release",
    "clean": "rm -rf lib/ && rm -rf native/index.node && rm -rf native/target && neon clean",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\"  \"!**/lib/**\"",
    "lint": "prettier --check \"**/*.ts\" \"**/*.md\" \"!**/lib/**\" && tslint --project ./tsconfig.json",
    "lint:fix": "prettier --check \"**/*.ts\" \"**/*.md\" \"!**/lib/**\" && tslint --project ./tsconfig.json --fix",
    "pre-pr": "yarn clean && yarn format && yarn lint:fix && yarn build && yarn test",
    "version:current": "node -pe \"require('./package.json').version\"",
    "version:current-unstable": "echo \"$(yarn run -s version:current)-unstable.$(git rev-parse --short HEAD)\"",
    "publish:unstable": "yarn version --no-git-tag-version --patch && yarn publish --no-git-tag-version --new-version \"$(yarn run -s version:current-unstable)\" && git checkout -- package.json"
  },
  "devDependencies": {
    "@stablelib/base64": "1.0.0",
    "@stablelib/benchmark": "1.0.0",
    "@stablelib/random": "1.0.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "jest": "24.9.0",
    "neon-cli": "0.4.0",
    "prettier": "1.19.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.4.1",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-consistent-codestyle": "1.15.1",
    "tslint-immutable": "6.0.0",
    "typescript": "3.7.5"
  }
}
